pipeline {
    agent any
    stages {
        stage('Checkout') {
                steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/selvanayaki678/employee-portal-crud.git']]])            
                  }
            }
            stage ('checking current dir'){
                steps {
                    sh 'pwd;ls;printenv'
                }
            }
            stage ('MVN build'){
                steps {
                    sh 'cd springboot-backend;mvn clean install'
                }
            }
            stage ('Docker build'){
                steps {
                    sh 'cd springboot-backend;docker build -t selvanayaki2509/employee-crud-java:${BUILD_NUMBER} .'
                }
            }

    }
}
